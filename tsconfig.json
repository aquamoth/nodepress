{
    "files": [
      "server/server.ts"
    ],
    "include": [
      "server/**/*.ts"
    ],
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "target": "es6",
      "outDir": "dist",
      "rootDir": "server",
      "sourceMap": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "removeComments": true,
      "typeRoots": [ "node_modules/@types" ],
      "paths": {
        "@core/*": ["./server/core/*"],
        "@components/*": ["./server/components/*"],
        "*": [
          "node_modules/@types/*",
          "./server/types/*"
        ]
      }
    }
  }